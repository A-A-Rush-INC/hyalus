{
  "name": "client-desktop",
  "version": "0.0.9",
  "main": "src/index.js",
  "license": "MIT",
  "build": {
    "appId": "xyz.hyalus",
    "productName": "Hyalus",
    "extraMetadata": {
      "name": "Hyalus"
    },
    "win": {
      "target": "nsis",
      "artifactName": "HyalusDesktop-win32.exe"
    },
    "mac": {
      "target": "zip",
      "category": "public.app-category.social-networking",
      "artifactName": "HyalusDesktop-osx.zip"
    },
    "linux": {
      "target": "AppImage",
      "category": "Internet",
      "artifactName": "HyalusDesktop-linux.AppImage"
    },
    "files": [
      "src",
      "build",
      "resources"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": {
      "provider": "generic",
      "url": "https://hyalus.xyz/update/"
    }
  },
  "scripts": {
    "clean": "rm -rf build dist",
    "build": "yarn clean && webpack && electron-builder -wml",
    "dev": "yarn dev:main & yarn dev:renderer",
    "dev:main": "DEV=1 nodemon -w src --exec electron .",
    "dev:renderer": "webpack  --mode development --watch",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "12.0.2",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "electron-updater": "^4.3.8",
    "webpack": "^5.28.0"
  }
}
